generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  tags        String[]
  imageUrl    String
}

model Experience {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  location    String
  description String
  icon        String?
  startDate   DateTime
  endDate     DateTime
}

model Skill {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String @unique
  order Int?
}
